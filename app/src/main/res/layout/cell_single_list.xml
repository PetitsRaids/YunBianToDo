<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_single_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_single_list">

        <CheckBox
            android:id="@+id/checkbox_single_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/todoName_single_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center|start"
            android:layout_marginStart="@dimen/margin_single_list_text_cell"
            android:gravity="center"
            android:maxLines="@integer/max_line_list_todo"
            android:text="@string/app_name"
            android:textSize="@dimen/font_size_single_list" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
